<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connect | BridgeU</title>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>/* Basic Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            padding: 0 20px;
        }
        
        /* Navbar Styling */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #a781f5;
            padding: 10px 20px;
        }
        
        .logo {
            color: #fff;
            font-size: 24px;
            font-weight: bold;
        }
        
        .nav-links {
            list-style: none;
            display: flex;
        }
        
        .nav-links li {
            margin-left: 20px;
        }
        
        .nav-links a {
            color: black;
            text-decoration: none;
            font-size: 18px;
        }
        
        .nav-links a:hover {
            color: #f4f4f4;
            text-decoration: underline;
        }
        
        /* Burger Menu for Mobile View */
        .burger {
            display: none;
            cursor: pointer;
        }
        
        .burger i {
            color: #fff;
            font-size: 24px;
        }
        
        /* Connect Section Styling */
        .connect-section {
            text-align: center;
            margin-top: 40px;
        }
        
        .connect-section h1 {
            font-size: 36px;
            margin-bottom: 20px;
        }
        
        .connect-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }
        
        .person-card {
            background-color: #fff;
            border: 1px solid #ddd;
            padding: 20px;
            text-align: center;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .person-card img {
            width: 150
        }
        </style>
</head>
<body>
    <nav class="navbar">
        <div class="logo">BridgeU</div>
        <ul class="nav-links">
            <li><a href="/Events">Events</a></li>
            <li><a href="#">Forum</a></li>
            <li><a href="/clubs">Clubs</a></li>
            <li><a href="/connect">Connect</a></li>
            <li><a href="/directory">Alumni Directory</a></li>
            <li><a href="/userprofile">Profile</a></li>
        </ul>
        <div class="burger">
            <i class="fas fa-bars"></i>
        </div>
    </nav>

    <section class="connect-section">
        <h1>People You Can Connect With</h1>
        <div class="connect-grid">
            <div class="person-card">
                <img src="images\person\person1.jpg" alt="Person 1">
                <h2>John Doe</h2>
                <p>Software Engineer at Google</p>
                <button>Connect</button>
            </div>
            <div class="person-card">
                <img src="images\person\person2.jpg" alt="Person 2">
                <h2>Jane Smith</h2>
                <p>Product Manager at Facebook</p>
                <button>Connect</button>
            </div>
            <div class="person-card">
                <img src="images\person\person3.jpg" alt="Person 3">
                <h2>Bob Johnson</h2>
                <p>Data Scientist at Amazon</p>
                <button>Connect</button>
            </div>
            <!-- Add more people as needed -->
        </div>
    </section>

    <script src="script.js">
        const burger = document.querySelector('.burger');
const navLinks = document.querySelector('.nav-links');

burger.addEventListener('click', () => {
    navLinks.classList.toggle('active');
});
</script>
</body>
</html>
